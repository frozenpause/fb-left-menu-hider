{
  "manifest_version": 3,
  "name": "Facebook Left Nav Toggler by frozenpause",
  "version": "1.0.0",
  "description": "Hide/show Facebook left sidebar items by their visible text | by frozenpause",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://web.facebook.com/*"
  ],
  "action": {
    "default_title": "FB Left Nav Toggler",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://web.facebook.com/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "styles/styles.css"
      ],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/defaults.js"
      ],
      "matches": [
        "https://www.facebook.com/*",
        "https://web.facebook.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}